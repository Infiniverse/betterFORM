#!/usr/bin/env node
var path = require('path');
var fs = require('fs');
var nopt = require('nopt');
var vulcan = require('../lib/vulcan.js');

var help = [
  'vulcanize: Concatenate a set of Web Components into one file',
  '',
  'Options:',
  '  --output, -o: Output file name (defualts to vulcanized.html)',
  '  --verbose, -v: More verbose logging',
  '  --help, -v, -?: Print this message',
  '  --csp: Extract inline scripts to a separate file (uses <output file name>.js)',
  '  --inline: The opposite of CSP mode, inline all assets (script and css) into the document'
];

function printHelp() {
  console.log(help.join('\n'));
  process.exit(0);
}

var options = nopt(
  {
    'output': path,
    'verbose': Boolean,
    'csp': Boolean,
    'inline': Boolean,
    'help': Boolean
  },
  {
    'o': ['--output'],
    'v': ['--verbose'],
    '?': ['--help'],
    'h': ['--help']
  }
);

if (options.help) {
  printHelp();
}

var argv = options.argv.remain;
if (argv[0]) {
  options.input = path.resolve(argv[0]);
}

if (!options.input || !fs.existsSync(options.input)) {
  console.error('No input file given!');
  process.exit(1);
}

var DEFAULT_OUTPUT = 'vulcanized.html';
if (!options.output) {
  console.warn('Default output to vulcanized.html' + (options.csp ? ' and vulcanized.js' : '') + ' in the input directory.');
  options.output = path.resolve(path.dirname(options.input), DEFAULT_OUTPUT);
}

options.outputDir = path.dirname(options.output);

vulcan.setOptions(options);
vulcan.processDocument();