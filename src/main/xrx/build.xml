<project id="betterFORM XRX" name="betterForm XRX Demo" default="deploy-xrx" basedir=".">

    <xmlproperty file="build.properties.xml"
                 semanticAttributes="true" keepRoot="false"/>

    <target  name="deploy-xrx" >
        <copy todir="/Volumes/db/betterform/apps/timetracker" includeemptydirs="true" overwrite="true" >
            <fileset dir="${basedir}/timetracker" >
                <exclude name="lucene"/>
                <exclude name="lucene/collection.xconf"/>
            </fileset>
        </copy>

        <copy tofile="/Volumes/db/system/config/db/apps/term/data/collection.xconf" includeemptydirs="true" overwrite="true">
            <fileset file="${basedir}/timetracker/lucene/collection.xconf" />
        </copy>
    </target>
</project>
