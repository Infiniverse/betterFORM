    <input type="dateTime" appearance="*" mediatype="*"/>
    <input type="date" appearance="*" mediatype="*">
        <param name="id" aspect="processor"/>
        <param name="classes" aspect="processor+user"/>
        <param name="pattern" aspect="user"/>

        <template xmlns="xhtml">
            <!-- markup -->
            <input id="{$id}" />
        </template>
        <implementation>
            <!--script-->
            <method name="create" return="object">
                <script type="text/javascript">
                    dojo.require("betterform.ui.input.Date");
                    newWidget = new betterform.ui.input.Date({
                        name:{$id},
                        value:{$id},
                        "class":{$classes},
                        title:dojo.attr(sourceNode, "title"),
                        constraints:{
                            selector:'date',
                            datePattern:$pattern
                        },
                        xfControlId:{$id}
                    },
                    sourceNode);
                </script>
            </method>
        </implementation>

    </input>

