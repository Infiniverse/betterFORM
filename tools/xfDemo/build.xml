<project id="xformDemo" name="XForms Demos" default="createDemoForms" basedir="." >

    <!-- **************************************** PROPERTIES **************************************** -->
    <!-- **************************************** PROPERTIES **************************************** -->
    <!-- **************************************** PROPERTIES **************************************** -->
    <path id="generator.libs" description="classpath for compiling core classes">
        <pathelement location="${basedir}/../../core/src/main/lib/saxon-9.0.jar"/>
        <pathelement location="${basedir}/../../core/src/main/lib/saxon-dom-9.0.jar"/>
    </path>

    <property name="demo.dir" value="../../src/main/xforms/reference"/>


    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <target name="createDemoForms">
        <xslt basedir="${demo.dir}"
              destdir="${demo.dir}/repeated"
              style="${basedir}/demo.xsl"
              force="true"
              includes="*.xhtml"
              extension="Repeated.xhtml">
            <classpath refid="generator.libs"/>
        </xslt>
    </target>
</project>
