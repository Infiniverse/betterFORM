<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Repeat Control</title>
    <page>
        <title>The Repeat Element</title>
        <description>
            The XForms specification allows the definition of repeating
            structures.
        </description>
        <references>
            <w3c ref="repeat"/>
        </references>
        <content>
            <models>
                <xf:model id="model-1">

                    <xf:instance id="instance-1">
                        <data xmlns="">
                            <repeat>
                                <items>
                                    <item>text 1</item>
                                    <item>2009-01-20</item>
                                    <item>true</item>
                                </items>

                                <items>
                                    <item>text 2</item>
                                    <item>2010-03-17</item>
                                    <item>false</item>
                                </items>

                                <items>
                                    <item>text 3</item>
                                    <item>2011-05-22</item>
                                    <item>true</item>
                                </items>

                                <items>
                                    <item>text 4</item>
                                    <item>2008-06-13</item>
                                    <item>false</item>
                                </items>
                            </repeat>
                        </data>
                    </xf:instance>

                    <xf:bind nodeset="repeat/items">
                        <xf:bind nodeset="item[1]" type="xf:string"/>
                        <xf:bind nodeset="item[2]" type="xf:date"/>
                        <xf:bind nodeset="item[3]" type="xf:boolean"/>
                    </xf:bind>
                </xf:model>

            </models>
            <samples>
                <section name="fullAppearance">
                    <title>Full Repeat Control (default)</title>
                    <description>
                        A repeat with no appearance, 'minimal' appearance or 'full' appearance will be rendered
                        vertically with labels on the left and controls on the right.
                    </description>
                    <xf:repeat id="repeat1" nodeset="repeat/items" appearance="full">
                        <xf:input ref="item[1]">
                            <xf:label>String:</xf:label>
                        </xf:input>
                        <br/>
                        <xf:input ref="item[2]">
                            <xf:label>Date:</xf:label>
                        </xf:input>
                        <br/>
                        <xf:input ref="item[3]">
                            <xf:label>Boolean:</xf:label>
                        </xf:input>
                    </xf:repeat>
                </section>
                <section name="compactAppearance">
                    <title>Compact Repeat Control</title>
                    <description>
                        Compact repeats are rendered as horizontal-oriented HTML tables.
                    </description>
                    <xf:repeat id="repeat2" nodeset="repeat/items"
                               appearance="compact">
                        <xf:input ref="item[1]">
                            <xf:label>String:</xf:label>
                        </xf:input>
                        <xf:input ref="item[2]">
                            <xf:label>Date:</xf:label>
                        </xf:input>
                        <xf:input ref="item[3]">
                            <xf:label>Boolean:</xf:label>
                        </xf:input>
                    </xf:repeat>
                </section>
            </samples>
        </content>
    </page>
</data>
