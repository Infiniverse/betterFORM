<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Repeat Control</title>
    <page>
        <title>The Repeat Element</title>
        <description>
            The XForms specification allows the definition of repeating
            structures.
        </description>
        <references>
           <w3c ref="repeat"/>
        </references>
        <content>
            <models>
                <xf:model id="model-1">

                  <xf:instance id="instance-1">

                     <data xmlns="" constraint="true" readonly="false" required="true" relevant="true">
                        <repeat constraint="true" readonly="false" required="true" relevant="true">
                        <items constraint="true" readonly="false" required="true" relevant="true">

                           <item constraint="true" readonly="false" required="true" relevant="true">text 1</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">2009-10-20</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">true</item>

                        </items>

                        <items constraint="true" readonly="false" required="true" relevant="true">

                           <item constraint="true" readonly="false" required="true" relevant="true">text 2</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">2009-10-21</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">true</item>

                        </items>

                        <items constraint="true" readonly="false" required="true" relevant="true">

                           <item constraint="true" readonly="false" required="true" relevant="true">text 3</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">2009-10-22</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">true</item>

                        </items>

                        <items constraint="true" readonly="false" required="true" relevant="true">

                           <item constraint="true" readonly="false" required="true" relevant="true">text 4</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">2009-10-23</item>

                           <item constraint="true" readonly="false" required="true" relevant="true">true</item>

                        </items>
						</repeat>
                     </data>

                  </xf:instance>

                  <xf:bind nodeset="items">

                     <xf:bind nodeset="item[1]" type="xf:string"></xf:bind>

                     <xf:bind nodeset="item[2]" type="xf:date"></xf:bind>

                     <xf:bind nodeset="item[3]" type="xf:boolean"></xf:bind>

                  </xf:bind>


                  <xf:bind nodeset="repeat">

                     <xf:bind nodeset="items" constraint="boolean-from-string(../@constraint)" readonly="boolean-from-string(../@readonly)" required="boolean-from-string(../@required)" relevant="boolean-from-string(../@relevant)"></xf:bind>

                     <xf:bind nodeset="@constraint" type="boolean"></xf:bind>

                     <xf:bind nodeset="@readonly" type="boolean"></xf:bind>

                     <xf:bind nodeset="@required" type="boolean"></xf:bind>

                     <xf:bind nodeset="@relevant" type="boolean"></xf:bind>

                  </xf:bind>



               </xf:model>
            </models>
            <samples>
                <section>
                    <title>Full Repeat Control (default)</title>
                    <description>
                        A repeat with no appearance, 'minimal' appearance or 'full' appearance will be rendered
                        vertically with labels on the left and controls on the right.
                    </description>
<xf:repeat nodeset="repeat/items" appearance="full">
    <xf:input ref="item[1]">
        <xf:label>String:</xf:label>
    </xf:input>
    <br/>
    <xf:input ref="item[2]">
        <xf:label>Date:</xf:label>
    </xf:input>
    <br/>
    <xf:input ref="item[3]">
        <xf:label>Boolean:</xf:label>
    </xf:input>
</xf:repeat>
                </section>
                <section>
                    <title>Compact Repeat Control</title>
                    <description>
                        Compact repeats are rendered as horizontal-oriented HTML tables.
                    </description>
<xf:repeat id="compactRepeat" nodeset="repeat/items"
           appearance="compact">
    <xf:input ref="item[1]">
        <xf:label>String:</xf:label>
    </xf:input>
    <xf:input ref="item[2]">
        <xf:label>Date:</xf:label>
    </xf:input>
    <xf:input ref="item[3]">
        <xf:label>Boolean:</xf:label>
    </xf:input>
</xf:repeat>
                </section>
            </samples>
        </content>
    </page>
</data>
