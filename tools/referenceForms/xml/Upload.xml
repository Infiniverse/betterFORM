<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Upload Control</title>
    <page>
        <title>The upload Element</title>
        <description>
            This form control enables the common feature found on Web sites
            to upload a file from the local file system, as well as
            accepting input from various devices including microphones,
            pens, and digital cameras.
        </description>
        <references>
            <w3c ref="upload"/>
        </references>
        <content>
            <models>
                <xf:model id="model-1">


                    <xf:instance id="instance-1">

                        <data xmlns="" constraint="true" readonly="false" required="true" relevant="true">

                            <items constraint="true" readonly="false" required="true" relevant="true">
                                <item constraint="true" readonly="false" required="true" relevant="true">
                                    <value type="" file="" constraint="true" readonly="false" required="true"
                                           relevant="true"/>
                                </item>
                                <item constraint="true" readonly="false" required="true" relevant="true">
                                    <value type="" file="" constraint="true" readonly="false" required="true"
                                           relevant="true"/>
                                </item>
                                <item constraint="true" readonly="false" required="true" relevant="true">
                                    <value type="" file="" constraint="true" readonly="false" required="true"
                                           relevant="true"/>
                                </item>
                            </items>

                        </data>

                    </xf:instance>

                    <xf:bind nodeset="items">

                        <xf:bind nodeset="item[1]/value" type="anyURI"></xf:bind>

                        <xf:bind nodeset="item[2]/value" type="base64Binary"></xf:bind>

                        <xf:bind nodeset="item[3]/value" type="hexBinary"></xf:bind>

                    </xf:bind>

                    <xf:bind nodeset="items/item[1]">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"></xf:bind>
                        <xf:bind nodeset="@constraint" type="boolean"></xf:bind>
                        <xf:bind nodeset="@readonly" type="boolean"></xf:bind>
                        <xf:bind nodeset="@required" type="boolean"></xf:bind>
                        <xf:bind nodeset="@relevant" type="boolean"></xf:bind>
                    </xf:bind>

                    <xf:bind nodeset="items/item[2]">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"></xf:bind>
                        <xf:bind nodeset="@constraint" type="boolean"></xf:bind>
                        <xf:bind nodeset="@readonly" type="boolean"></xf:bind>
                        <xf:bind nodeset="@required" type="boolean"></xf:bind>
                        <xf:bind nodeset="@relevant" type="boolean"></xf:bind>
                    </xf:bind>

                    <xf:bind nodeset="items/item[3]">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"></xf:bind>
                        <xf:bind nodeset="@constraint" type="boolean"></xf:bind>
                        <xf:bind nodeset="@readonly" type="boolean"></xf:bind>
                        <xf:bind nodeset="@required" type="boolean"></xf:bind>
                        <xf:bind nodeset="@relevant" type="boolean"></xf:bind>
                    </xf:bind>

                </xf:model>
            </models>
            <samples>
                <section name="upload">
                    <title>File Upload Control</title>
                    <description>
                        An upload control binding to datatype 'anyURI' is equivalent to a file upload known
                        from HTML.
                    </description>
                    <xf:upload id="upload1" ref="items/item[1]/value">
                        <xf:label>a standard file upload</xf:label>
                        <xf:filename ref="attribute::file"/>
                        <xf:mediatype ref="attribute::type"/>
                    </xf:upload>
                    <xf:group appearance="bf:verticalTable">
                        <xf:output ref="items/item[1]/value/@file">
                            <xf:label>File:</xf:label>
                        </xf:output>
                        <xf:output ref="items/item[1]/value/@type">
                            <xf:label>Type:</xf:label>
                        </xf:output>
                        <xf:output value="items/item[1]/value">
                            <xf:label>Download Link:</xf:label>
                        </xf:output>
                    </xf:group>
                    <mips>
                        <xf:input navindex="-1" ref="items/item[1]/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[1]/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[1]/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[1]/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section name="base64">
                    <title>Upload as base64Binary data</title>
                    <description>
                        An upload control binding to datatype 'base64Binary' encodes the uploaded data as base64Binary
                        and
                        stores these as the value of the bound node.
                    </description>
                    <xf:upload id="upload2" ref="items/item[2]/value">
                        <xf:label>a base64Binary upload</xf:label>
                        <xf:filename ref="attribute::file"/>
                        <xf:mediatype ref="attribute::type"/>
                    </xf:upload>
                    <xf:group appearance="bf:verticalTable">
                        <xf:output ref="items/item[2]/value/@file">
                            <xf:label>File:</xf:label>
                        </xf:output>
                        <xf:output ref="items/item[2]/value/@type">
                            <xf:label>Type:</xf:label>
                        </xf:output>
                        <xf:output ref="items/item[2]/value">
                            <xf:label>base64Binary data:</xf:label>
                        </xf:output>
                    </xf:group>
                    <mips>
                        <xf:input navindex="-1" ref="items/item[2]/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[2]/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[2]/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[2]/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section name="hexBinary">
                    <title>Upload as hexBinary data</title>
                    <description>
                        An upload control binding to datatype 'hexBinary' encodes the uploaded data as hexBinary and
                        stores these as the value of the bound node.
                    </description>
                    <xf:upload id="upload3" ref="items/item[3]/value">
                        <xf:label>a hexBinary upload</xf:label>
                        <xf:filename ref="attribute::file"/>
                        <xf:mediatype ref="attribute::type"/>
                    </xf:upload>
                    <xf:group appearance="bf:verticalTable">
                        <xf:output ref="items/item[3]/value/@file">
                            <xf:label>File:</xf:label>
                        </xf:output>
                        <xf:output ref="items/item[3]/value/@type">
                            <xf:label>Type:</xf:label>
                        </xf:output>
                        <xf:output ref="items/item[3]/value">
                            <xf:label>hexBinary data:</xf:label>
                        </xf:output>
                    </xf:group>
                    <mips>
                        <xf:input navindex="-1" ref="items/item[3]/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[3]/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[3]/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/item[3]/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
            </samples>
        </content>
    </page>
</data>
