<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Repeat Control</title>
    <page>
        <title>The Repeat Element</title>
        <description>Description
            The XForms specification allows the definition of repeating
            structures.
        </description>
        <specification>
            <link>http://www.w3.org/TR/xforms11/#ui-repeat-module</link>
            <description>XForms 1.1 Element Specification</description>
        </specification>
        <content>
            <models>
                <xf:model xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
                          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                          xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="model-1">
                    <xf:instance xmlns="" id="instance-1">
                        <data>
                            <items>
                                <item>text 1</item>
                                <item>2009-10-20</item>
                                <item>true</item>
                            </items>
                            <items>
                                <item>text 2</item>
                                <item>2009-10-21</item>
                                <item>true</item>
                            </items>
                            <items>
                                <item>text 3</item>
                                <item>2009-10-22</item>
                                <item>true</item>
                            </items>
                            <items>
                                <item>text 4</item>
                                <item>2009-10-23</item>
                                <item>true</item>
                            </items>
                        </data>
                    </xf:instance>
                    <xf:bind nodeset="items">
                        <xf:bind nodeset="item[1]" type="xf:string"/>
                        <xf:bind nodeset="item[2]" type="xf:date"/>
                        <xf:bind nodeset="item[3]" type="xf:boolean"/>
                    </xf:bind>

                    <xf:bind nodeset="items">
                        <xf:bind nodeset="item[1]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[2]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[3]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[4]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="@constraint" type="boolean"/>
                        <xf:bind nodeset="@readonly" type="boolean"/>
                        <xf:bind nodeset="@required" type="boolean"/>
                        <xf:bind nodeset="@relevant" type="boolean"/>
                    </xf:bind>
                </xf:model>
            </models>
            <samples>
                <section>
                    <title>Full Repeat Control (default)</title>
                    <description>
                        A repeat with no appearance, 'minimal' appearance or 'full' appearance will be rendered
                        vertically with labels on the left and controls on the right.
                    </description>
                    <xf:repeat xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
                               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                               xmlns:xsd="http://www.w3.org/2001/XMLSchema" nodeset="items" appearance="full">
                        <xf:input ref="item[1]">
                            <xf:label>String:</xf:label>
                        </xf:input>
                        <br/>
                        <xf:input ref="item[2]">
                            <xf:label>Date:</xf:label>
                        </xf:input>
                        <br/>
                        <xf:input ref="item[3]">
                            <xf:label>Boolean:</xf:label>
                        </xf:input>
                    </xf:repeat>
                </section>
                <section>
                    <title>Compact Repeat Control</title>
                    <description>
                        Compact repeats are rendered as horizontal-oriented HTML tables.
                    </description>
                    <xf:repeat xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
                               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                               xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="compactRepeat" nodeset="items"
                               appearance="compact">
                        <xf:input ref="item[1]">
                            <xf:label>String:</xf:label>
                        </xf:input>
                        <xf:input ref="item[2]">
                            <xf:label>Date:</xf:label>
                        </xf:input>
                        <xf:input ref="item[3]">
                            <xf:label>Boolean:</xf:label>
                        </xf:input>
                    </xf:repeat>
                </section>
            </samples>
        </content>
    </page>
</data>
