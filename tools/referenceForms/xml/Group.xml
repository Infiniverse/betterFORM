        <xf:label>Ccc-label</xf:label>
    </xf:input>
    <xf:input ref="d">
        <xf:label>Dddd-label</xf:label>
    </xf:input>

    <div style="padding:5px;color:darkgreen;font-size:14pt;">this following group shows all labels in the left column</div>

    <xf:group appearance="bf:horizontalColumn">
        <xf:label>A-label / Bb-label / Ccc-label / Dddd-label</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
