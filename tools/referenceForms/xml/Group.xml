        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>

    <div style="padding:5px;color:darkgreen;font-size:14pt;">this is a simple div Element nested within the group</div>

    <xf:group>
        <xf:label>no appearance group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
            <xf:label>Ccc-label</xf:label>
        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>

    <xf:group appearance="minimal">
        <xf:label>minimal group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
            <xf:label>Ccc-label</xf:label>
        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>

    <xf:group appearance="compact">
        <xf:label>compact group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
            <xf:label>Ccc-label</xf:label>
        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>

    <xf:group appearance="full">
        <xf:label>full group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
            <xf:label>Ccc-label</xf:label>
        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>

    <xf:group appearance="bf:verticalTable">
        <xf:label>vertical group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
    </xf:group>


    <xf:group appearance="bf:horizontalTable">
        <xf:label>horizontal group</xf:label>
        <xf:input ref="a">
            <xf:label>A-label</xf:label>
        </xf:input>
        <xf:input ref="b">
            <xf:label>Bb-label</xf:label>
        </xf:input>
        <xf:input ref="c">
            <xf:label>Ccc-label</xf:label>
        </xf:input>
        <xf:input ref="d">
            <xf:label>Dddd-label</xf:label>
        </xf:input>
    </xf:group>
</xf:group>
                </section>
