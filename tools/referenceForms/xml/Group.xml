                <section>
                    <title>Group with 'bf:horizontalTable' appearance</title>
                    <description/>
<xf:group ref="grouped-data/group"
          appearance="bf:horizontalTable">
    <xf:label>Complex Horizontal Group</xf:label>
    <xf:input ref="a">
        <xf:label>A-label</xf:label>
    </xf:input>
    <xf:input ref="b">
