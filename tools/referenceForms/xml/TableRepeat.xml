<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:xhtml="http://www.w3.org/1999/xhtml">
    <title>Input Control</title>
    <page>
        <title>Using repeat attributes with HTML table</title>
        <description>
            The XForms repeat attributes
        </description>
        <references>
            <w3c ref="ui.repeat.via.attrs"/>
        </references>

        <content>
            <models>
                <xf:model>
                    <xf:instance>
                        <data xmlns="">
                            <items>
                                <item1>item 11</item1>
                                <item2>item 12</item2>
                                <item3>item 13</item3>
                                <item4>item 14</item4>
                                <item5>item 15</item5>
                            </items>
                            <items>
                                <item1>item 21</item1>
                                <item2>item 22</item2>
                                <item3>item 23</item3>
                                <item4>item 24</item4>
                                <item5>item 25</item5>
                            </items>
                            <items>
                                <item1>item 31</item1>
                                <item2>item 32</item2>
                                <item3>item 33</item3>
                                <item4>item 34</item4>
                                <item5>item 35</item5>
                            </items>
                        </data>
                    </xf:instance>

                    <xf:instance id="labels">
                        <data xmlns="">
                            <item1>Label 1</item1>
                            <item2>Label 2</item2>
                            <item3>Label 3</item3>
                            <item4>Label 4</item4>
                            <item5>Label 5</item5>
                        </data>
                    </xf:instance>
                </xf:model>
            </models>
            <samples>
                <section>
                    <title>HTML table with XForms repeat attributes</title>
                    <description>Description 1</description>
                    <xf:trigger>
                        <xf:label>insert</xf:label>
                        <xf:action>
                            <xf:insert nodeset="items"/>
                        </xf:action>
                    </xf:trigger>
                    <xf:trigger>
                        <xf:label>delete</xf:label>
                        <xf:action>
                            <xf:delete nodeset="items[index('r-attrs')]"/>
                        </xf:action>
                    </xf:trigger>
                    <xhtml:table>
                        <xhtml:thead>
                            <xhtml:tr>
                                <xhtml:th>
                                    <xf:output ref="instance('labels')/item1"/>
                                </xhtml:th>
                                <xhtml:th>
                                    <xf:output ref="instance('labels')/item2"/>
                                </xhtml:th>
                                <xhtml:th>
                                    <xf:output ref="instance('labels')/item3"/>
                                </xhtml:th>
                                <xhtml:th>
                                    <xf:output ref="instance('labels')/item4"/>
                                </xhtml:th>
                                <xhtml:th>
                                    <xf:output ref="instance('labels')/item5"/>
                                </xhtml:th>
                            </xhtml:tr>
                        </xhtml:thead>
                        <xhtml:tbody id="r-attrs" xf:repeat-nodeset="items">
                            <xhtml:tr>
                                <xhtml:td id="foo" class="one" style="color:steelblue;font-weight:bold;">
                                    <xf:output ref="item1"/>
                                </xhtml:td>
                                <xhtml:td class="two" style="color:blue;">
                                    <xf:output ref="item2"/>
                                </xhtml:td>
                                <xhtml:td class="two" style="color:blue;">
                                    <xf:output ref="item3"/>
                                </xhtml:td>
                                <xhtml:td class="two" style="color:blue;">
                                    <xf:output ref="item4"/>
                                </xhtml:td>
                                <xhtml:td class="two" style="color:blue;">
                                    <xf:output ref="item5"/>
                                </xhtml:td>
                            </xhtml:tr>
                        </xhtml:tbody>
                    </xhtml:table>
                </section>
            </samples>
        </content>
    </page>
</data>
