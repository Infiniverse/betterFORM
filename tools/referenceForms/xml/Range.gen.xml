<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Range Control</title>
    <page>
        <title>The Range Control</title>
        <description>Description
            This form control allows selection from a sequential range of values.
        </description>
        <specification>
            <link>http://www.w3.org/TR/xforms11/#ui-range</link>
            <description>XForms 1.1 Element Specification</description>
        </specification>
        <content>
            <models>
                <xf:model id="model-1">
                    <xf:instance xmlns="" id="instance-1">
                        <data xmlns="">
                            <item>
                                <value>5</value>
                            </item>
                        </data>
                    </xf:instance>
                    <xf:bind nodeset="item/value" type="integer"/>
                    <xf:bind nodeset="item">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="@constraint" type="boolean"/>
                        <xf:bind nodeset="@readonly" type="boolean"/>
                        <xf:bind nodeset="@required" type="boolean"/>
                        <xf:bind nodeset="@relevant" type="boolean"/>
                    </xf:bind>
                </xf:model>
            </models>
            <samples>
                <section>
                    <title>Standard Range Control</title>
                    <description>
                        Standard rendering for a XForms range control. Fully supports keyboard navigation and mouse
                        wheel
                        scrolling when focussed.
                    </description>
                    <xf:range ref="item/value" start="1" step="1" end="5"
                              incremental="true">
                        <xf:label>a slider</xf:label>
                    </xf:range>
                </section>
                <section>
                    <title>Range Control with appearance 'bf:rating'</title>
                    <description>
                        Rating control but without keyboard control.
                    </description>
                    <xf:range ref="item/value" start="1" step="1" end="5"
                              appearance="bf:rating" incremental="true">
                        <xf:label>Rate it</xf:label>
                        <xf:hint>This is a standard range control</xf:hint>
                        <xf:help>Not much to say here but some basic html formatting is
                            <b>possible</b>
                        </xf:help>
                        <xf:alert>value is invalid</xf:alert>
                    </xf:range>
                </section>
            </samples>
        </content>
    </page>
</data>
