<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Secret Control</title>
    <page>
        <title>The secret Control</title>
        <description>
            This form control is used to provide the user with the ability
            to supply information to the system in a manner that makes
            it difficult for someone, other than the user, who may be
            observing the process to discern the value that is being
            supplied.
        </description>
        <references>
            <w3c ref="secret"/>
        </references>
        <content>
            <models>
                <xf:model>
                    <xf:instance>
                        <data xmlns="">
                            <item constraint="true" readonly="false" required="true" relevant="true">
                                <value>secrect</value>
                            </item>
                        </data>
                    </xf:instance>
                    <xf:bind nodeset="item">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)" type="string"/>
                        <xf:bind nodeset="@constraint" type="boolean"/>
                        <xf:bind nodeset="@readonly" type="boolean"/>
                        <xf:bind nodeset="@required" type="boolean"/>
                        <xf:bind nodeset="@relevant" type="boolean"/>
                    </xf:bind>
                </xf:model>
            </models>
            <samples>
                <section name="secret">
                    <title>Standard Secret Control</title>
                    <description>
                        XForms secret maps a a native input type="secret" HTML control.
                    </description>
                    <xf:secret id="secret1" ref="item/value">
                        <xf:label>a secret input</xf:label>
                        <xf:help>help for secrect</xf:help>
                        <xf:hint>hint for secrect</xf:hint>
                        <xf:alert>invalid</xf:alert>
                    </xf:secret>
                    <mips>
                        <xf:input navindex="-1" ref="item/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
            </samples>
        </content>
    </page>
</data>
