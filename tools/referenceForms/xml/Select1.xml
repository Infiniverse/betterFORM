<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Select1 Control</title>
    <page>
        <title>The select1 Control</title>
        <description>
            This form control allows the user to make multiple selections from a set of choices..
        </description>
        <references>
           <w3c ref="select1"/>
        </references>
        <content>
            <models>
                <xf:model id="model-1">

                    <xf:instance id="instance-1">
                        <data xmlns="" constraint="true" readonly="false" required="false" relevant="true">
                            <item constraint="true" readonly="false" required="true" relevant="true">
                                <value constraint="true" readonly="false" required="true" relevant="true">AX</value>
                            </item>
                        </data>
                    </xf:instance>
                    <xf:bind nodeset="item">
                        <xf:bind nodeset="value" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"></xf:bind>
                        <xf:bind nodeset="@constraint" type="boolean"></xf:bind>
                        <xf:bind nodeset="@readonly" type="boolean"></xf:bind>
                        <xf:bind nodeset="@required" type="boolean"></xf:bind>
                        <xf:bind nodeset="@relevant" type="boolean"></xf:bind>
                    </xf:bind>
                    <xf:instance id="codes">
                        <countrylist xmlns="" lang="en" constraint="true" readonly="false" required="true"
                                     relevant="true">
                            <country constraint="true" readonly="false" required="true" relevant="true">
                                <country-name constraint="true" readonly="false" required="true" relevant="true">
                                    AFGHANISTAN
                                </country-name>
                                <code constraint="true" readonly="false" required="true" relevant="true">AF</code>
                            </country>
                            <country constraint="true" readonly="false" required="true" relevant="true">
                                <country-name constraint="true" readonly="false" required="true" relevant="true">LAND
                                    ISLANDS
                                </country-name>
                                <code constraint="true" readonly="false" required="true" relevant="true">AX</code>
                            </country>
                            <country constraint="true" readonly="false" required="true" relevant="true">
                                <country-name constraint="true" readonly="false" required="true" relevant="true">
                                    ALBANIA
                                </country-name>
                                <code constraint="true" readonly="false" required="true" relevant="true">AL</code>
                            </country>
                            <country constraint="true" readonly="false" required="true" relevant="true">
                                <country-name constraint="true" readonly="false" required="true" relevant="true">
                                    ALGERIA
                                </country-name>
                                <code constraint="true" readonly="false" required="true" relevant="true">DZ</code>
                            </country>
                        </countrylist>
                    </xf:instance>
                </xf:model>
            </models>
            <samples>
                <section>
                    <title>select1 Control with appearance 'minimal'</title>
                    <description>
                        Default rendering of a select1 if no appearance is given.
                    </description>
<xf:select1 ref="item/value">
    <xf:label>minimal select1</xf:label>
    <xf:itemset nodeset="instance('codes')/country">
        <xf:label ref="country-name"/>
        <xf:value ref="code"/>
    </xf:itemset>
</xf:select1>
                    <mips>
                        <xf:input navindex="-1" ref="item/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section>
                    <title>select1 Control with appearance 'compact'</title>
                    <description/>
<xf:select1 ref="item/value" appearance="compact">
    <xf:label>compact select1</xf:label>
    <xf:itemset nodeset="instance('codes')/country">
        <xf:label ref="country-name"/>
        <xf:value ref="code"/>
    </xf:itemset>
</xf:select1>
                    <mips>
                        <xf:input navindex="-1" ref="item/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section>
                    <title>select1 Control with appearance 'full'</title>
                    <description/>
<xf:select1 ref="item/value" appearance="full">
    <xf:label>full select1</xf:label>
    <xf:itemset nodeset="instance('codes')/country">
        <xf:label ref="country-name"/>
        <xf:value ref="code"/>
    </xf:itemset>
</xf:select1>
                    <mips>
                        <xf:input navindex="-1" ref="item/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section>
                    <title>open select1 Control</title>
                    <description>
                        Select1 with @selection='open' allows the user to input a value that does not exist in the list
                        of choices. Simply type into the input field.
                    </description>
<xf:select1 ref="item/value" selection="open">
    <xf:label>selection open</xf:label>
    <xf:choices>
        <xf:item>
            <xf:label>AFGHANISTAN</xf:label>
            <xf:value>AF</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>LAND ISLANDS</xf:label>
            <xf:value>AX</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>ALBANIA</xf:label>
            <xf:value>AL</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>ALGERIA</xf:label>
            <xf:value>DZ</xf:value>
        </xf:item>
    </xf:choices>
</xf:select1>
                    <mips>
                        <xf:input navindex="-1" ref="item/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="item/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
            </samples>
        </content>
    </page>
</data>
