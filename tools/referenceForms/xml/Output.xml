<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xf="http://www.w3.org/2002/xforms">
    <title>Output Control</title>
    <page>
        <title>The
            <span class="titlecode">output</span>
            Control
        </title>
        <description>
            This form control renders content based in part on instance
            data, but it provides no means for entering or changing data.
        </description>
        <references>
            <w3c ref="output"/>
        </references>
        <content>
            <models>
                <xf:model id="model-1">

                    <xf:instance id="instance-1">
                        <data xmlns="" constraint="true" readonly="false" required="false" relevant="true">
                            <items constraint="true" readonly="false" required="true" relevant="true">
                                <item constraint="true" readonly="false" required="true" relevant="true">a output
                                    value
                                </item>
                                <item constraint="true" readonly="false" required="true" relevant="true">
                                    http://betterform.sourceforge.net
                                </item>
                                <item constraint="true" readonly="false" required="true" relevant="true">&lt;b&gt;Providing&lt;/b&gt;
                                    &lt;i&gt;basic&lt;/i&gt; HTML &lt;u&gt;formatting&lt;/u&gt;</item>
                                <item constraint="true" readonly="false" required="true" relevant="true">
                                    ../../images/bf_logo_482x195.png
                                </item>
                            </items>
                        </data>
                    </xf:instance>

                    <xf:bind nodeset="items">
                        <xf:bind nodeset="item[1]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[2]" type="anyURI" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[3]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>
                        <xf:bind nodeset="item[4]" constraint="boolean-from-string(../@constraint)"
                                 readonly="boolean-from-string(../@readonly)"
                                 required="boolean-from-string(../@required)"
                                 relevant="boolean-from-string(../@relevant)"/>

                        <xf:bind nodeset="@constraint" type="boolean"/>
                        <xf:bind nodeset="@readonly" type="boolean"/>
                        <xf:bind nodeset="@required" type="boolean"/>
                        <xf:bind nodeset="@relevant" type="boolean"/>
                    </xf:bind>
                </xf:model>
            </models>
            <samples>
                <section name="simpleText">
                    <title>Simple Text Ouput</title>
                    <description/>
                    <xf:output id="output1" ref="items/item[1]">
                        <xf:label>Output 1:</xf:label>
                        <xf:help>Help for Output 1</xf:help>
                        <xf:hint>Hint for Output 1</xf:hint>
                        <xf:alert>Invalid</xf:alert>
                    </xf:output>
                    <mips>
                        <xf:input navindex="-1" ref="items/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section name="anyURI">
                    <title>Output bound to datatype 'anyURI'</title>
                    <description/>
                    <xf:output id="output2" ref="items/item[2]">
                        <xf:label>Homepage</xf:label>
                        <xf:help>Help for Output 2</xf:help>
                        <xf:hint>Hint for Output 2</xf:hint>
                        <xf:alert>Invalid</xf:alert>

                    </xf:output>
                    <mips>
                        <xf:input navindex="-1" ref="items/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
                <section name="htmlOutput">
                    <title>Output Control with (simple) HTML Content</title>
                    <description/>
                    <xf:output id="output3" ref="items/item[3]" mediatype="text/html">
                        <xf:label>Output 3</xf:label>
                        <xf:help>Help for Output 3</xf:help>
                        <xf:hint>Hint for Output 3</xf:hint>
                        <xf:alert>Invalid</xf:alert>
                    </xf:output>
                </section>
                <section name="imageOutput">
                    <title>Output Controll with image</title>
                    <description/>
                    <xf:output id="output4" ref="items/item[4]" mediatype="image/gif">
                        <xf:label>Output 4:</xf:label>
                        <xf:help>Help for Output 4</xf:help>
                        <xf:hint>Hint for Output 4</xf:hint>
                        <xf:alert>Invalid</xf:alert>

                    </xf:output>
                    <mips>
                        <xf:input navindex="-1" ref="items/@readonly" class="mips" incremental="true">
                            <xf:label>readonly</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@required" class="mips" incremental="true">
                            <xf:label>required</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@relevant" class="mips" incremental="true">
                            <xf:label>relevant</xf:label>
                        </xf:input>
                        <xf:input navindex="-1" ref="items/@constraint" class="mips" incremental="true">
                            <xf:label>valid</xf:label>
                        </xf:input>
                    </mips>
                </section>
            </samples>
        </content>
    </page>
</data>
