<root>
    <properties>
        <!-- path to forms for modules (actual: src/main/xforms src/main/html)-->
        <rootDir>..</rootDir>
        <!-- optional variable if user wants to deploy betterform to a different path-->
        <webappPath>/Applications/apache-tomcat-5.5.26/webapps</webappPath>
        <javac>
            <deprecation>off</deprecation>
            <debug>on</debug>
            <optimize>off</optimize>
            <!-- TODO: to be implemented in all javac tasks -->
            <version>1.5</version>
        </javac>
        <!--<dojo>dojo-release-1.4.0-src</dojo>-->
         <dojo>dojo-release-1.3.2-src</dojo> 

        <timeline>simile-timeline-2.2.0</timeline>
    </properties>
    <core>
        <app>
            <name>betterform-core</name>
            <version>3.0.0</version>
        </app>
        <compile>
            <classpath pathid="compile.class.path" description="classpath for compiling core classes">
                <pathelement path="${core.dir}/target/classes"/>
                <pathelement location="${core.dir}/src/main/lib/commons-codec-1.3.jar" groupid="commons-codec" version="1.3" artifactId="commons-codec"/>
                <pathelement location="${core.dir}/src/main/lib/commons-fileupload-1.1.jar" groupid="commons-fileupload" version="1.1" artifactId="commons-fileupload"/>
                <pathelement location="${core.dir}/src/main/lib/commons-httpclient-3.0.1.jar" groupid="commons-httpclient" version="3.0.1" artifactId="commons-httpclient"/>
                <pathelement location="${core.dir}/src/main/lib/commons-lang-2.4.jar" groupid="commons-lang" version="2.4" artifactId="commons-lang"/>
                <pathelement location="${core.dir}/src/main/lib/commons-logging-1.0.4.jar" groupid="commons-logging" version="1.0.4" artifactId="commons-logging"/>
                <pathelement location="${core.dir}/src/main/lib/commons-logging-api-1.0.4.jar" groupid="commons-logging-api" version="1.0.4" artifactId="commons-logging-api"/>
                <pathelement location="${core.dir}/src/main/lib/javax-activation-1.0.2.jar" groupid="javax.activation" version="1.0.2" artifactId="activation"/>
                <pathelement location="${core.dir}/src/main/lib/javax-mail-1.3.jar" groupid="javax.mail" version="1.3" artifactId="mail"/>
                <pathelement location="${core.dir}/src/main/lib/log4j-1.2.13.jar" groupid="log4j" version="1.2.13" artifactId="log4j"/>
                <pathelement location="${core.dir}/src/main/lib/saxon-dom-9.0.jar" groupid="net.sf.saxon" version="9.0" artifactId="saxon-dom"/>
                <pathelement location="${core.dir}/src/main/lib/saxon-9.0.jar" groupid="net.sf.saxon" version="9.0" artifactId="saxon"/>
                <pathelement location="${core.dir}/src/main/lib/xercesImpl-2.8.0.jar" groupid="xerces" version="2.8.0" artifactId="xercesImpl"/>
                <pathelement location="${core.dir}/src/main/lib/xml-apis-1.0.b2.jar" groupid="xml-apis" artifactId="xml-apis" version="1.0.b2"/>
                <pathelement location="${core.dir}/src/main/lib/xmlrpc-common-3.0.jar" groupid="org.apache.xmlrpc" version="3.0" artifactId="xmlrpc-common"/>
                <pathelement location="${core.dir}/src/main/lib/xmlrpc-client-3.0.jar" groupid="org.apache.xmlrpc" version="3.0" artifactId="xmlrpc-client"/>
                <pathelement location="${core.dir}/src/main/lib/xmlrpc-server-3.0.jar" groupid="org.apache.xmlrpc" version="3.0" artifactId="xmlrpc-server"/>
                <pathelement location="${core.dir}/src/main/lib/ehcache-1.6.2.jar" groupid="net.sf.ehcache" version="1.6.2" artifactId="ehcache"/>
            </classpath>
        </compile>
        <test>
            <classpath pathid="test.class.path" description="classpath for compiling core with test classes">
                <pathelement location="${core.dir}/src/test/lib/junit-3.8.2.jar" groupid="junit" version="3.8.2" artifactId="junit" scope="test"/>
                <path refid="compile.class.path"/>
                <pathelement path="${core.dir}/target/test-classes"/>
                <pathelement path="${core.dir}/src/test/lib/jmdns.jar"/>
                <pathelement path="${core.dir}/src/test/lib/log4j-zeroconf.jar"/>
            </classpath>
        </test>
    </core>
    <web>
        <app>
            <name>betterform</name>
            <version>3.0.0</version>
        </app>
        <compile>
            <classpath pathid="web.class.path" description="classpath for compiling web classes">
                <path refid="compile.class.path"/>
                <pathelement location="${web.dir}/src/main/lib/dwr-2.0.5.jar" groupid="dwr" version="2.0.5" artifactId="dwr"/>
                <pathelement location="${web.dir}/src/main/lib/servlet-api-2.4.jar" groupid="javax.servlet" version="2.4" artifactId="servlet-api" scope="provided"/>
            </classpath>
        </compile>
        <test>
            <!-- Selenium Properties -->
            
            <selenium>
              <!-- which browser to use for tests -->
              <browser>*firefox</browser>
              <!--server properties -->
              <server>
                <jar>${basedir}/src/main/lib/selenium-server.jar</jar>
                <host>localhost</host>
                <port>4444</port>
                <url>/selenium-server/core/index.html</url>
                <errorsBeginAt>404</errorsBeginAt>
              </server>
            </selenium>
            <!-- home of the tomcat-server which serves testpages -->
            <tomcat>
                <download-url>http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/tomcat/tomcat-6/v6.0.20/bin/apache-tomcat-6.0.20.zip</download-url>
                <version>apache-tomcat-6.0.20</version>
                <shutdownport>42000</shutdownport>
                <port>42042</port>
                <host>localhost</host>
            </tomcat>
            
            <classpath pathid="web.test.class.path" description="classpath for compiling web classes">
                <path refid="web.class.path"/>
                <path refid="test.class.path"/>            
                <pathelement path="${web.dir}/target/test-classes"/>
                <pathelement location="${web.dir}/src/main/lib/selenium-java-client-driver-1.0.1.jar" groupid="org.seleniumhq.selenium" version="1.0.1" artifactId="selenium-java-client-driver" scope="test"/>
            </classpath>
        </test>
    </web>
    <convex>
        <app>
            <name>convex</name>
            <version>1.0</version>
        </app>
        <compile>
            <classpath pathid="convex.class.path" description="classpath for compiling web classes">
                <pathelement location="${convex.dir}/src/main/lib/plugin.jar" groupid="netscape" version="1.0" artifactId="netscape" scope="provided"/>
                <path refid="compile.class.path"/>
            </classpath>
        </compile>
    </convex>

    <!-- TODO: check if needed
    <webtest>
        <server>http://localhost:8080</server>
        <url>/betterform/forms</url>
    </webtest>
    -->

</root>

