<project id="XForms2HTML" name="XForms2HTML" default="transformToXForms" basedir="." >

    <!-- **************************************** PROPERTIES **************************************** -->
    <!-- **************************************** PROPERTIES **************************************** -->
    <!-- **************************************** PROPERTIES **************************************** -->
    <path id="generator.libs" description="classpath for compiling core classes">
        <pathelement location="${basedir}/../../core/src/main/lib/saxon-9.0.jar"/>
        <pathelement location="${basedir}/../../core/src/main/lib/saxon-dom-9.0.jar"/>
    </path>


    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <target name="transformToXForms">
        <xslt destdir="${basedir}/target"
              style="${basedir}/../../src/main/resources/xslt/dojo-dev.xsl"
              force="true"
              in="${basedir}/dump.xml"
              out="${basedir}/dump.xhtml">
            <classpath refid="generator.libs"/>
        </xslt>
    </target>


</project>
