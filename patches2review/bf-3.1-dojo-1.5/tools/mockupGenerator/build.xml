        <pathelement location="${basedir}/../../core/src/main/lib/saxon-dom-9.0.jar"/>
    </path>


    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <!-- **************************************** HOUSEKEEPING **************************************** -->
    <target name="generateRepeatInstance">
